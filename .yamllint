---
extends: default

rules:
  braces:
    level: warning
    max-spaces-inside: 1
  brackets:
    level: warning
    max-spaces-inside: 1
  colons:
    level: error
    max-spaces-after: 1
    max-spaces-before: 0
  commas:
    level: error
    max-spaces-before: 0
    max-spaces-after: 1
  comments: disable
  comments-indentation: disable
  document-start: enable
  empty-lines:
    level: warning
    max: 1
  hyphens:
    level: error
    max-spaces-after: 1
  indentation:
    level: warning
    indent-sequences: consistent
  line-length:
    max: 80
    level: warning
    allow-non-breakable-inline-mappings: true
  truthy:
    level: warning
